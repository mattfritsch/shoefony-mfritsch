{% extends 'layout.html.twig' %}
{% block title %} Nos produits | {{ parent()}} {% endblock %}
{% block content %}
<!-- Page Content -->
<div class="container">
	<div class="row">
		{{ block('brands', 'blocks/brands.html.twig') }}
		<div class="col-md-9">
			<p class="lead">Nos produits " Toutes les marques "</p>
			{% if products is empty %}
				<div class="row text-center">
					<div class="alert alert-danger" role="alert">
						Il n'y a aucun produit disponible
					</div>
				</div>
			{% else %}
				<div class="row text-center">
					{% for product in products %}
						{{ block('productsList', 'blocks/product.html.twig') }}
					{% endfor %}
				</div>

				<div class="row text-center">
					<nav>
						<ul class="pagination pagination-lg">
							<li>
								<a href="#" aria-label="Précédent">
									<span aria-hidden="true">&laquo;</span>
								</a>
							</li>
							<li class="active">
								<a href="#">1</a>
							</li>
							<li>
								<a href="#">2</a>
							</li>
							<li>
								<a href="#">3</a>
							</li>
							<li>
								<a href="#">4</a>
							</li>
							<li>
								<a href="#">5</a>
							</li>
							<li>
								<a href="#" aria-label="Suivant">
									<span aria-hidden="true">&raquo;</span>
								</a>
							</li>
						</ul>
					</nav>
				</div>
			{% endif %}
		</div>
	</div>

	<hr/>
{% endblock %}