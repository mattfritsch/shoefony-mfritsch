{% block productsList %}
    <div class="col-md-4 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt|capitalize }}">
            <div class="caption">
                <h3>{{ product.name|capitalize }}</h3>
                <p>{{ product.description }}</p>
                <p>
                    <span class="badge">{{ product.price|format_currency('EUR') }}</span>
                    <a href="{{ path('store_show_product', {id: product.id , slug: product.slug}) }}" class="btn btn-default">Voir la fiche</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block productDetails %}
    <img class="img-responsive" src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
    <div class="caption-full">
        <h4 class="pull-right"><span class="badge">{{ product.price|format_currency('EUR') }}</span></h4>
        <h3>{{ product.name|capitalize }}</h3>
        <p>{{ product.description }}</p>
        <p>
            {{ product.longDescription }}
        </p>
        {% if product.colors|length %}
            <p>
                Le produit est compos√© des couleurs suivantes :
                {% for color in product.colors %}
                    {{ color.name ~ (not loop.last ? ', ') }}
                {% endfor %}
            </p>
        {% endif %}
    </div>
{% endblock %}
