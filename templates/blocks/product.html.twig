{% block productList %}
    <div class="col-md-4 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="{{ asset(product.image.url) }}" alt="Nom du produit">
            <div class="caption">
                <h3>{{ product.name|capitalize }}</h3>
                <p>{{ product.description }}</p>
                <p>
                    <span class="badge">{{ product.price|format_currency('EUR') }}</span>
                    <a href="{{ path('store_show_product', {id: product.id, slug: product.slug}) }}" class="btn btn-default">Voir la fiche</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block productIndex %}
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
            <div class="caption">
                <h3>{{ product.name }}</h3>
                <p>{{ product.description }}</p>
                <p>
                    <span class="badge">{{ product.price|format_currency('EUR') }}</span>
                    <a href="{{ path('store_show_product', {id: product.id, slug: product.slug}) }}" class="btn btn-default">Voir la fiche</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}